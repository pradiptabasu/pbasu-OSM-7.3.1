<?xml version="1.0" encoding="UTF-8"?>
	
	
<orderStatePolicy name="SalesOrderFulfillment-LifeCyclePolicy"  xsi:schemaLocation="http://www.metasolv.com/OMS/OrderModel/2002/06/25" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.metasolv.com/OMS/OrderModel/2002/06/25">	
	<description>SalesOrderFulfillment-LifeCyclePolicy</description>
		<cancelledOrderState>
			<deleteOrderTransaction>
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>

			</deleteOrderTransaction>
			<updateOrderTransaction>			
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>

			</updateOrderTransaction>
		</cancelledOrderState>
		<cancellingOrderState>
			<suspendOrderTransaction>
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>
				<waitFor>
					<noTasksInProgressCondition/>
					<conditionNotSatisfiedEventInterval>P0DT1H0M0.000S</conditionNotSatisfiedEventInterval>
				</waitFor>

			</suspendOrderTransaction>			
		</cancellingOrderState>
		<completedOrderState>
			<deleteOrderTransaction>
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>

			</deleteOrderTransaction>
			<updateOrderTransaction>
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>

			</updateOrderTransaction>
		</completedOrderState>
		<inProgressState>
			<cancelOrderTransaction>
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>
				<waitFor>
					<noTasksInProgressCondition/>
					<conditionNotSatisfiedEventInterval>P0DT1H0M0.000S</conditionNotSatisfiedEventInterval>
				</waitFor>

			</cancelOrderTransaction>								
			<raiseExceptionTransaction>
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>
				<waitFor>
					<noTasksInProgressCondition/>
					<conditionNotSatisfiedEventInterval>P0DT1H0M0.000S</conditionNotSatisfiedEventInterval>
				</waitFor>

			</raiseExceptionTransaction>				
			<suspendOrderTransaction>
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>
				<waitFor>
					<noTasksInProgressCondition/>
					<conditionNotSatisfiedEventInterval>P0DT1H0M0.000S</conditionNotSatisfiedEventInterval>
				</waitFor>

			</suspendOrderTransaction>
			<updateOrderTransaction>
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>

			</updateOrderTransaction>				
		</inProgressState>	
		<notStartedOrderState>
			<deleteOrderTransaction>
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>

			</deleteOrderTransaction>	
			<failOrderTransaction>
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>
				<waitFor>
					<noTasksInProgressCondition/>
					<conditionNotSatisfiedEventInterval>P0DT1H0M0.000S</conditionNotSatisfiedEventInterval>
				</waitFor>

			</failOrderTransaction>
			<updateOrderTransaction>
				<condition>
					<conditionName>defaultCondition</conditionName>
					<expression>true()</expression>
				</condition>
				<permission>
					<condition>true()</condition>
					<workgroup>SalesOrderFulfillment-Role</workgroup>
				</permission>

			</updateOrderTransaction>	
		</notStartedOrderState> 
		<waitingOrderState/>
</orderStatePolicy>